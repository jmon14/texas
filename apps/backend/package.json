{
  "name": "backend",
  "version": "2.2.5",
  "description": "Backend API for Texas Poker Application",
  "author": "Jorge Montero",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier \"{src,e2e}/**/*.ts\" --write",
    "start": "nest start",
    "start:dev": "NODE_ENV=development nest start --watch",
    "start:test": "NODE_ENV=test nest start --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,e2e}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "NODE_ENV=test jest --config ./e2e/jest-e2e.json",
    "migrate": "ts-node -r tsconfig-paths/register src/scripts/migrate.ts",
    "migrate:revert": "ts-node -r tsconfig-paths/register src/scripts/migrate-revert.ts",
    "seed:scenarios": "ts-node -r tsconfig-paths/register src/seeders/scenarios.seeder.ts"
  },
  "dependencies": {
    "@aws-sdk/client-ses": "3.828.0",
    "@nestjs/common": "9.0.11",
    "@nestjs/config": "2.2.0",
    "@nestjs/core": "9.0.11",
    "@nestjs/jwt": "9.0.0",
    "@nestjs/mongoose": "^9.2.0",
    "@nestjs/passport": "9.0.0",
    "@nestjs/platform-express": "9.0.11",
    "@nestjs/swagger": "7.3.0",
    "@nestjs/typeorm": "9.0.1",
    "@sentry/nestjs": "^10.21.0",
    "aws-sdk": "2.1326.0",
    "bcrypt": "5.0.1",
    "class-transformer": "0.5.1",
    "class-validator": "0.13.2",
    "cookie-parser": "1.4.6",
    "helmet": "5.1.0",
    "joi": "17.7.0",
    "mongoose": "^6.12.0",
    "nodemailer": "6.7.8",
    "passport-jwt": "4.0.0",
    "passport-local": "1.0.0",
    "pg": "8.11.3",
    "typeorm": "0.3.7",
    "uuid": "9.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.10",
    "@nestjs/schematics": "9.0.1",
    "@nestjs/testing": "9.0.11",
    "@types/aws-sdk": "2.7.0",
    "@types/bcrypt": "5.0.0",
    "@types/cookie-parser": "1.4.3",
    "@types/express": "4.17.13",
    "@types/jest": "27.5.0",
    "@types/multer": "1.4.7",
    "@types/node": "16.0.0",
    "@types/nodemailer": "6.4.5",
    "@types/passport-jwt": "3.0.6",
    "@types/passport-local": "1.0.34",
    "@types/supertest": "2.0.11",
    "@types/uuid": "9.0.1",
    "@typescript-eslint/eslint-plugin": "6.21.0",
    "@typescript-eslint/parser": "6.21.0",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.1.3",
    "eslint-plugin-unused-imports": "3.0.0",
    "jest": "28.1.3",
    "prettier": "3.2.5",
    "supertest": "6.1.3",
    "ts-jest": "28.0.1",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.2.0"
  },
  "jest": {
    "resetMocks": true,
    "setupFilesAfterEnv": [
      "<rootDir>/../jest.setup.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.ts"
    ],
    "coveragePathIgnorePatterns": [
      "mocks.ts",
      "main.ts",
      ".subscriber.ts",
      ".module.ts",
      ".dto.ts",
      ".constants.ts",
      ".entity.ts",
      ".guard.ts"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/$1"
    }
  }
}
