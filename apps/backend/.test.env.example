# Test Environment Configuration
# Copy this file to .test.env and update with your local test database settings

# App settings
PORT=3000
DOMAIN=localhost
UI_URL=http://localhost:8080

# Database settings (using localhost for local testing)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=admin
POSTGRES_PASSWORD=admin
POSTGRES_DB=texas_test

# MongoDB settings (for ranges data)
MONGODB_URI=mongodb://localhost:27017/texas_test

# Secrets (test values)
JWT_SECRET=test_jwt_secret
JWT_EXPIRATION_TIME=3600
JWT_REFRESH_SECRET=test_jwt_refresh_secret
JWT_REFRESH_EXPIRATION_TIME=18000

# Email confirmation
JWT_EMAIL_SECRET=test_jwt_email_secret
JWT_EMAIL_EXPIRATION_TIME=1800
EMAIL_FROM=test@allinrange.com

# AWS (mock values for testing - S3 operations will be mocked)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=test_access_key
AWS_SECRET_ACCESS_KEY=test_secret_key
AWS_PUBLIC_BUCKET_NAME=test_bucket

# Environment
NODE_ENV=test

