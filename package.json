{
  "name": "texas-poker-monorepo",
  "version": "2.2.2",
  "private": true,
  "description": "Texas Poker Application - Monorepo",
  "scripts": {
    "prepare": "husky",
    "install:all": "npm install && npm run install:backend && npm run install:frontend && npm run install:tools",
    "install:backend": "cd apps/backend && npm install",
    "install:frontend": "cd apps/frontend && npm install",
    "install:tools": "cd tools/texas-mcp-server && npm install && cd ../clickup-mcp-server && npm install"
  },
  "devDependencies": {
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2"
  },
  "lint-staged": {
    "apps/backend/**/*.ts": [
      "cd apps/backend && npm run format",
      "cd apps/backend && npm run lint"
    ],
    "apps/frontend/**/*.{ts,tsx}": [
      "cd apps/frontend && npm run format",
      "cd apps/frontend && npm run lint"
    ]
  }
}
